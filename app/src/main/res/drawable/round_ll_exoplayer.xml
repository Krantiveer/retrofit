<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/_10sdp" />
            <stroke android:width="1dip" android:color="@color/colorButtonPressedTV" />
            <gradient android:angle="-90" android:startColor="@color/colorButtonPressedTV" android:endColor="@color/colorButtonPressedTV"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/_10sdp" />
            <stroke android:width="1dip" android:color="@color/colorButtonFocusedTV" />
            <solid android:color="@color/colorButtonFocusedTV"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/_10sdp" />
            <stroke android:width="1dip" android:color="@color/colorButtonUnselectedTV" />
            <gradient android:angle="-90" android:startColor="@color/colorButtonUnselectedTV" android:endColor="@color/colorButtonUnselectedTV" />
        </shape>
    </item>
</selector>